<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testble.MainActivity">

    <Switch
        android:id="@+id/onOffSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Switch" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/A1Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Pressure 1:      " />

        <TextView
            android:id="@+id/pValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/A1Input"
            android:text="P1Value" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/A2Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Pressure 2:      " />

        <TextView
            android:id="@+id/ppValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/A2Input"
            android:text="P2Value" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LDRValue"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/A3Input"
            android:layout_marginEnd="49dp" />

        <TextView
        android:id="@+id/A3Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="LDR"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="93dp" />



    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/A0Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSensor"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/bValue"
            android:layout_marginEnd="17dp" />

        <TextView
            android:id="@+id/bValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSensor Value"
            android:layout_marginEnd="63dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/AccelXText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer X "
            android:layout_marginEnd="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/AccelXValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X Value"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/AccelXText"
            android:layout_marginEnd="30dp" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/AccelYValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Y Value"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/AccelYText"
            android:layout_marginEnd="45dp" />

        <TextView
            android:id="@+id/AccelYText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer Y"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="57dp" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/LongValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long Value"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="67dp" />

        <TextView
            android:id="@+id/Long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/LongValue"
            android:layout_marginEnd="27dp" />

    </RelativeLayout>



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/LatValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lat Value"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="79dp" />

        <TextView
            android:id="@+id/LatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/LatValue"
            android:layout_marginEnd="32dp" />

    </RelativeLayout>

    <Switch
        android:id="@+id/A_onOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/A3Input"
        android:text="Peak Reset" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slider"
        android:max="100" />


</LinearLayout>
